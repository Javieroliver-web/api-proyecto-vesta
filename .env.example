# ===================================
# VESTA API - Environment Variables
# ===================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# === DATABASE CONFIGURATION ===
POSTGRES_USER=vesta_user
POSTGRES_PASSWORD=change_this_password_in_production
POSTGRES_DB=vesta_db
POSTGRES_PORT=5433

# Database URL for Spring Boot
SPRING_DATASOURCE_URL=jdbc:postgresql://db:5432/vesta_db
SPRING_DATASOURCE_USERNAME=vesta_user
SPRING_DATASOURCE_PASSWORD=change_this_password_in_production

# === JWT CONFIGURATION ===
# Generate a strong secret key (minimum 256 bits / 32 characters)
# You can use: openssl rand -base64 32
JWT_SECRET=ClaveSecretaSuperSeguraParaVestaProyecto2025ChangeThisInProduction
JWT_EXPIRATION=86400000

# === SERVER CONFIGURATION ===
SERVER_PORT=8080

# === SPRING PROFILES ===
# Options: dev, prod
SPRING_PROFILES_ACTIVE=dev

# === LOGGING ===
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_VESTA=DEBUG

# === EMAIL CONFIGURATION (for password recovery) ===
# Gmail SMTP Configuration
# IMPORTANT: For Gmail, you need to use an "App Password", not your regular password
# How to generate an App Password:
# 1. Go to https://myaccount.google.com/security
# 2. Enable 2-Step Verification if not already enabled
# 3. Go to https://myaccount.google.com/apppasswords
# 4. Generate a new app password for "Mail"
# 5. Copy the 16-character password and paste it below
MAIL_USERNAME=tu-email@gmail.com
MAIL_PASSWORD=your-app-password-here

# Frontend URL (where users will reset their password)
FRONTEND_URL=http://localhost:8081
